<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_horizontal_margin">

    <TextView
        android:id="@+id/welcome"
        android:layout_width="365dp"
        android:layout_height="42dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="200dp"
        android:textSize="18sp" />

    <ImageView
            android:id="@+id/imageView2"
            android:layout_width="409dp"
            android:layout_height="194dp"
            app:srcCompat="@drawable/android_fitness" />

    <TextView
        android:id="@+id/textCurrentDate"
        android:layout_width="328dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="250dp"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editGoal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:hint="set goal"
        android:inputType="number" />

    <Button
        android:id="@+id/buttonResetGoal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="450dp"
        android:text="Reset"
        android:textStyle="normal|bold"
        android:background="@color/colorPrimary"
        android:textColor="#ffffff"/>

    <TextView
        android:id="@+id/textSetGoal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="460dp"
        android:text="Today's Goal is 0"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/textCosumed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="500dp"
        android:text="Today's total calories consumed is 0"
        android:textSize="18sp" />


</RelativeLayout>